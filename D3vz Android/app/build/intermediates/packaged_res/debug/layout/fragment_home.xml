<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nmUsuario"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginStart="102dp"
            android:layout_marginTop="304dp"
            android:layout_marginEnd="100dp"
            android:text="@string/nome_do_usuario"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Interesse1"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="28dp"
            android:text="@string/interesse_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="254dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/todo6"
            android:src="@drawable/avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/emailIusario"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="35dp"
            android:text="@string/email_do_usuario"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/IdadeUs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nmUsuario" />

        <TextView
            android:id="@+id/IdadeUs"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="56dp"
            android:text="@string/idade_do_usuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/emailIusario"
            app:layout_constraintTop_toBottomOf="@+id/nmUsuario" />

        <View
            android:id="@+id/divider"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="9dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IdadeUs" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edtperfil"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="119dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="119dp"
            android:background="@color/verdedev"
            android:text="@string/editar_perfil"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Interesse1" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>