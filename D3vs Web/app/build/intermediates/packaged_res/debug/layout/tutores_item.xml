<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/FotoTutor"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_person"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/nm_tutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Tutor"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@+id/FotoTutor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/des_tutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição do tutor"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/nm_tutor"
        app:layout_constraintStart_toEndOf="@+id/FotoTutor"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <TextView
        android:id="@+id/ds_linguagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linguagens"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/des_tutor"
        app:layout_constraintStart_toEndOf="@+id/FotoTutor"


        />

    <TextView
        android:id="@+id/dsnivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Nivel Tutor"
        app:layout_constraintStart_toEndOf="@+id/FotoTutor"
        app:layout_constraintTop_toBottomOf="@+id/des_tutor" />

</androidx.constraintlayout.widget.ConstraintLayout>